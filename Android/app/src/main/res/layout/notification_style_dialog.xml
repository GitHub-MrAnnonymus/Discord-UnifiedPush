<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/discord_grey"
    android:padding="24dp">

    <!-- Radio Button Options -->
    <RadioGroup
        android:id="@+id/notificationStyleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <!-- Multiple Notifications Option -->
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/styleMulti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multi_notification_title"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/discord_text"
            android:layout_marginBottom="8dp"
            app:buttonTint="@color/blurple" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/multi_notification_desc"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/discord_text"
            android:alpha="0.7"
            android:layout_marginStart="48dp"
            android:layout_marginBottom="24dp" />

        <!-- Hybrid Option -->
        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/styleHybrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hybrid_notification_title"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:textColor="@color/discord_text"
            android:layout_marginBottom="8dp"
            app:buttonTint="@color/blurple" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hybrid_notification_desc"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="@color/discord_text"
            android:alpha="0.7"
            android:layout_marginStart="48dp" />

    </RadioGroup>

</LinearLayout> 